<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageItemsActivity">

    <Button
        android:id="@+id/buttonAddItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Items"
        android:layout_marginBottom="16dp"
        android:onClick="onAddButtonClicked"/>

    <Button
        android:id="@+id/buttonDeleteItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Items"
        android:layout_below="@id/buttonAddItems"
        android:layout_marginTop="16dp"
        android:onClick="onDeleteButtonClicked"/>

</RelativeLayout>